---
import './styles/global.css';
import Header from './Header.astro';
import Footer from './Footer.astro';
// import TweakPane from './TweakPane.astro';

export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  siteType?: 'main' | 'diy'; // Optional prop to customize defaults
}

const { title, description, ogImage, siteType } = Astro.props;

// Dynamic default descriptions based on site type
const getDefaultDescription = (type?: string) => {
  if (type === 'diy') {
    return "Katie Langerman's DIY corner - tutorials, code experiments, and creative projects.";
  }
  return 'Katie Langerman - Systems Designer based in San Diego, working on design systems at GitHub.';
};

// Dynamic title formatting
const getFinalTitle = (title: string, type?: string) => {
  if (type === 'diy' && title === 'DIY') {
    return 'DIY | Katie Langerman';
  }
  if (title === 'Katie Langerman | Systems Designer') {
    return title;
  }
  return `${title} | Katie Langerman`;
};

const finalDescription = description || getDefaultDescription(siteType);
const finalTitle = getFinalTitle(title, siteType);
---

<!doctype html>
<html lang="en" class={siteType === 'diy' ? 'diy-site' : 'main-site'}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={finalDescription} />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inria+Sans:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=Inria+Serif:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=Unna:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/kfavicon.png" />

    <!-- Open Graph -->
    <meta property="og:title" content={finalTitle} />
    <meta property="og:description" content={finalDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    {ogImage && <meta property="og:image" content={ogImage} />}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={finalTitle} />
    <meta name="twitter:description" content={finalDescription} />
    {ogImage && <meta name="twitter:image" content={ogImage} />}

    <title>{finalTitle}</title>


  </head>
  <body>
    <Header currentPath={Astro.url.pathname} />
    <slot />
    <Footer />
    <!-- <TweakPane /> -->
  </body>
</html>
