---
import { getPostType } from './postTypes';
import './styles/label.css';

export interface Props {
  type: string;
  href?: string;
  size?: 'small' | 'medium';
  variant?: 'default' | 'outline' | 'subtle';
}

const { type, href, size = 'medium', variant = 'default' } = Astro.props;

const postType = getPostType(type);
const displayLabel = postType?.label || type;
const typeId = postType?.id || type;
---

{href ? (
  <a href={href} class={`label label--${size} label--${variant} label--${typeId}`} data-type={typeId}>
    {displayLabel}
  </a>
) : (
  <span class={`label label--${size} label--${variant} label--${typeId}`} data-type={typeId}>
    {displayLabel}
  </span>
)}
