<style>
  .site-footer {
    margin-top: 4rem;
    padding: 2rem 0;
    border-top: 1px solid var(--card-border);
    background-color: var(--bg);
  }

  .footer-content {
    max-width: 64ch;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .social-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.5rem;
  }

  .social-link {
    color: var(--text);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s ease;
    opacity: 0.8;
  }

  .social-link:hover {
    color: var(--link);
    opacity: 1;
  }

  @media (max-width: 768px) {
    .social-links {
      gap: 1rem;
    }
    
    .social-link {
      font-size: 0.85rem;
    }
  }
</style>